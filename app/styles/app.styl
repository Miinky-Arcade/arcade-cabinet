*
  padding: 0
  margin: 0
  cursor: none !important

body
  overflow: hidden;
  font-family: Helvetica;
  color: white;
  background: #333 url(../img/Background.png) no-repeat center center fixed;
  -webkit-background-size: cover;
  background-size: cover;

#title
  position: fixed;
  right: 100px;
  top: 100px;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-position: top right;
  background-repeat: no-repeat;

#wheel
  position: relative
  z-index: 2
  top: 30px

ul
  margin-left: 50px;
  list-style: none;
  position: relative;

  li
    z-index: 2;
    height: 75px;
    position: relative;
    vertical-align: middle;
    font-size: 60px;
    font-weight: bold;
    text-shadow: 4px 4px #121212;
    -webkit-text-stroke: 4px black;
    -moz-transform-origin: left center;
    -webkit-transform-origin: left center;
    transform-origin: left center;
    -moz-transition: all .05s ease-in-out;
    -webkit-transition: all .05s ease-in-out;
    transition: all .05s ease-in-out;

    img
      max-height: 75px
      position: relative
      top: 50%
      -webkit-transform: translateY(-50%)
      transform: translateY(-50%)

    &.active
      height: 100px;
      margin: 40px 0
      font-size: 100px;
      z-index: 99999;
      img
        max-height: 500px;

@media all and (max-width: 640px)
  ul li
    font-size: 40px
    &.active
      font-size: 60px


#pointer
  background: url(../img/Pointer.png) no-repeat right 50%;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: -10px;
  z-index: 1;
  -webkit-transform: scaleX(-1);
  transform: scaleX(-1);

.hidden
  display: none

.modal
  position: fixed
  left: 50%
  top: 50%
  width: 50%
  margin-left: -25%
  background: rgba(0,0,0,.75)
  text-align: center
  padding: 1em
  font-size: 2em
  z-index: 100000
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);

  p
    margin-bottom: 1em

  a
    display: inline-block
    border-radius: 5px
    padding: 10px
    margin: .25em

    &.active
      padding: 7px
      border: 3px solid yellow

.cocktail
  #wheel
    position: fixed;
    top: 0
    left: -25px
    -webkit-transform: rotate(90deg);
    -webkit-transform-origin: 0 0;

  #pointer
    left: 0
    top: 75px
    -webkit-transform: rotate(-90deg);
    transform: rotate(-90deg);

  .modal
    -webkit-transform: translateY(-50%) rotate(90deg)
    transform: translateY(-50%) rotate(90deg)


